  <div id="home" class="bg-dark text-secondary px-4 py-5 text-center">
    <% if (!locals.content && !locals.error) { %>
    <div class="py-5">
      <h1 class="display-5 fw-bold text-white">Quotes for every mood</h1>
      <div class="col-lg-6 mx-auto">
        <p class="fs-5 mb-4">Hit the button below to generate a random quote.</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <form action="/fetch" method="POST">
          <button type="submit" class="btn btn-outline-light btn-lg px-4 me-sm-3 fw-bold" fdprocessedid="ht91vd" formaction="/fetch">Generate Quote</button>
          <!-- <button type="button" class="btn btn-outline-light btn-lg px-4" fdprocessedid="y54y82">Secondary</button> -->
        </form>
        </div>
      </div>
    </div>
    <% } %>
    <section>
      <% if (locals.content) { %>
        <div class="card text-bg-dark">
          <div class="card-header">
            <%= tags %>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= content %></p>
              <footer class="blockquote-footer"><%= author %></footer>
            </blockquote>
            <form action="/refresh" method="POST">
              <button class="btn btn-primary">Refresh</button>
            </form>
          </div>
        </div>
      <% } %>
    
      <% if (locals.error) { %>
        <div class="card text-bg-dark">
          <div class="card-header">
            Error!
          </div>
          <div class="card-body">
            <p class="card-text"><%= error %></p>
            <form action="/refresh" method="POST">
            <button class="btn btn-primary">Refresh</button>
          </form>
          </div>
        </div>
        <% } %>
    </section>
  </div>




  <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 1" aria-current="true"></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://images.unsplash.com/photo-1548567117-02328f050eaa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2670&q=80" class="d-block w-100" alt="">
        <!-- <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg> -->
        <div class="container">
          <div class="carousel-caption text-start">
            <h1><em><%= firstquote.content %></em></h1>
            <p class="opacity-75"><%= firstquote.tags %></p>
            <p class="blockquote-footer" style="color: rgb(224, 224, 224); font-size: 1rem;"><em><%= firstquote.author %></em></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://images.unsplash.com/photo-1539448455561-25e1e5821f70?auto=format&fit=crop&q=60&w=800&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDZ8fHxlbnwwfHx8fHw%3D" class="d-block w-100" alt="">
        <!-- <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg> -->
        <div class="container">
          <div class="carousel-caption">
            <h1><em><%= secondquote.content %></em></h1>
            <p class="opacity-75"><%= secondquote.tags %></p>
            <p class="blockquote-footer" style="color: rgb(224, 224, 224); font-size: 1rem;"><em><%= secondquote.author %></em></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
         <img src="https://images.unsplash.com/photo-1548667512-1300dc2b94bc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2670&q=80" class="d-block w-100" alt="">
        <!-- <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg> -->
        <div class="container">
          <div class="carousel-caption text-end">
            <h1><em><%= thirdquote.content %></em></h1>
            <p class="opacity-75"><%= thirdquote.tags %></p>
            <p class="blockquote-footer" style="color: rgb(224, 224, 224); font-size: 1rem;"><em><%= thirdquote.author %></em></p>
          </div>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>


  
